# ===========================================
# GUESS GAME NUXT PWA - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Application
NODE_ENV=development          # development | staging | production
APP_VERSION=1.0.0             # Semantic version
APP_NAME="Guess Game"         # Application name

# Deployment
BASE_URL=/                    # Base URL path (e.g., /guess-game-nuxt-pwa/ for subpath)
NUXT_PUBLIC_SITE_URL=         # Full site URL (e.g., https://example.gitlab.io/app)

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=          # GA4 Measurement ID (G-XXXXXXXXXX)

# API Configuration
API_SECRET=                   # Server-side API secret key
API_TIMEOUT=10000             # API timeout in milliseconds

# Feature Flags
ENABLE_DEBUG_PANEL=false      # Show debug panel (Ctrl+Shift+D)
ENABLE_ANALYTICS=false        # Enable analytics tracking
ENABLE_PWA=true               # Enable PWA features

# External Services (optional)
PETSCAN_API_URL=https://petscan.wmflabs.org
SENTRY_DSN=                   # Sentry error tracking DSN

# GitLab CI/CD (set automatically in pipelines)
# CI=true
# CI_COMMIT_SHA=
# CI_COMMIT_REF_NAME=
# CI_ENVIRONMENT_NAME=
