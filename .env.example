# ===========================================
# CONSOLIDATED ENVIRONMENT VARIABLES
# For Riddle Rush Nuxt PWA Monorepo
# ===========================================
# This file consolidates all environment variables
# that were previously split between root and apps/game

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Base configuration for the application
NODE_ENV= # REPLACE_WITH_YOUR_VALUE
APP_VERSION= # REPLACE_WITH_YOUR_VALUE
APP_NAME= # REPLACE_WITH_YOUR_VALUE

# ===========================================
# DEPLOYMENT & ASSET CONFIGURATION
# ===========================================
# Base URL for assets and routing
BASE_URL= # REPLACE_WITH_YOUR_VALUE
NUXT_PUBLIC_SITE_URL= # REPLACE_WITH_YOUR_VALUE

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics (optional - set via GitLab CI/CD variables in production)
GOOGLE_ANALYTICS_ID= # REPLACE_WITH_YOUR_VALUE

# CloudWatch Error Monitoring (optional)
CLOUDWATCH_ENDPOINT= # REPLACE_WITH_YOUR_VALUE
CLOUDWATCH_API_KEY= # REPLACE_WITH_YOUR_VALUE
DEBUG_ERROR_SYNC= # REPLACE_WITH_YOUR_VALUE

# ===========================================
# FEATURE FLAGS & TOGGLES
# ===========================================
ENABLE_DEBUG_PANEL= # REPLACE_WITH_YOUR_VALUE
ENABLE_ANALYTICS= # REPLACE_WITH_YOUR_VALUE
ENABLE_PWA= # REPLACE_WITH_YOUR_VALUE

# GitLab Feature Flags (optional)
# If not provided, falls back to local settings
# Format: https://gitlab.com/api/v4/feature_flags/unleash/:project_id
GITLAB_FEATURE_FLAGS_URL= # YOUR_GITLAB_PROJECT_URL
GITLAB_FEATURE_FLAGS_TOKEN= # YOUR_GITLAB_TOKEN

# ===========================================
# API & EXTERNAL SERVICES
# ===========================================
# API Configuration
API_SECRET= # REPLACE_WITH_YOUR_VALUE
API_TIMEOUT= # REPLACE_WITH_YOUR_VALUE

# External Services (optional)
PETSCAN_API_URL=https://petscan.wmflabs.org
SENTRY_DSN= # REPLACE_WITH_YOUR_VALUE

# ===========================================
# AWS INFRASTRUCTURE (Production)
# ===========================================
# Required: Your S3 bucket name
AWS_S3_BUCKET= # YOUR_S3_BUCKET_NAME

# Docs deployment (S3 + CloudFront)
DOCS_S3_BUCKET= # YOUR_DOCS_BUCKET_NAME
DOCS_CLOUDFRONT_ID= # YOUR_DOCS_CLOUDFRONT_ID

# Optional: AWS region
AWS_REGION=eu-central-1

# Optional: CloudFront Distribution ID
AWS_CLOUDFRONT_ID= # YOUR_CLOUDFRONT_ID

# ===========================================
# ANDROID BUILD CONFIGURATION
# ===========================================
# Capacitor Android build variables
ANDROID_KEYSTORE_PATH=
ANDROID_KEYSTORE_PASSWORD=
ANDROID_KEYSTORE_ALIAS=
ANDROID_KEYSTORE_ALIAS_PASSWORD=

# ===========================================
# CI/CD ENVIRONMENT VARIABLES
# ===========================================
# These are typically set automatically in CI/CD pipelines
# CI=true
# CI_COMMIT_SHA=
# CI_COMMIT_REF_NAME=
# CI_ENVIRONMENT_NAME=

# ===========================================
# USAGE NOTES
# ===========================================
# 1. Copy this file to .env for development
# 2. Never commit .env files to version control
# 3. Use .env.example files for documentation
# 4. Nuxt runtimeConfig automatically picks up these variables
# 5. Variables prefixed with NUXT_PUBLIC_ are exposed to client-side

# ===========================================
# VARIABLE PRECEDENCE
# ===========================================
# 1. CI/CD environment variables (highest priority)
# 2. .env file variables
# 3. Default values in code (lowest priority)

# ===========================================
# MIGRATION NOTES
# ===========================================
# This file consolidates variables that were previously in:
# - .env (root)
# - apps/game/.env
# - .env.example (root)
# - apps/game/.env.example

# All variables are now centralized for easier management
# and consistent behavior across the monorepo.
