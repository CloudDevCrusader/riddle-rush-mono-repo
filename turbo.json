{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "public/**",
        "locales/**",
        "nuxt.config.ts",
        "tsconfig.json",
        "package.json",
        "../../packages/*/src/**",
        "../../packages/*/package.json"
      ],
      "outputs": [".nuxt/**", ".output/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "BASE_URL",
        "GOOGLE_ANALYTICS_ID",
        "APP_VERSION",
        "NUXT_PUBLIC_CLOUDFRONT_DOMAIN",
        "NUXT_PUBLIC_WEBSITE_URL",
        "AWS_REGION"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "public/**", "locales/**", "nuxt.config.ts"],
      "outputs": [".output/**", "dist/**"]
    },
    "lint": {
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "**/*.js", ".eslintrc.json", "eslint.config.mjs"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "**/*.js"],
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "tsconfig.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**", "**/*.test.ts", "**/*.spec.ts"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:unit": {
      "inputs": ["src/**", "tests/unit/**", "**/*.test.ts"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "inputs": ["src/**", "tests/e2e/**", "**/*.spec.ts", "playwright.config.ts"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false
    },
    "format": {
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "**/*.scss", "**/*.css", "**/*.json", "**/*.md"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["src/**", "**/*.ts", "**/*.vue", "**/*.scss", "**/*.css", "**/*.json", "**/*.md"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": false
  }
}
