{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // ========================================
        // Nuxt Development Debugging
        // ========================================
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸš€ Debug Nuxt Dev Server",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "dev"],
            "port": 9229,
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "env": {
                "NODE_OPTIONS": "--inspect"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "ğŸŒ Debug Nuxt in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///*": "*",
                "webpack:///./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "ğŸŒ Debug Nuxt in Edge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///*": "*",
                "webpack:///./~/*": "${webRoot}/node_modules/*"
            }
        },

        // ========================================
        // Vitest Unit Testing
        // ========================================
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ§ª Debug Current Test File",
            "autoAttachChildProcesses": true,
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": ["run", "${relativeFile}"],
            "smartStep": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ§ª Debug All Unit Tests",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test:unit"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ§ª Debug Vitest Watch Mode",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "test"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
        },

        // ========================================
        // Playwright E2E Testing
        // ========================================
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ­ Debug Playwright Tests",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["exec", "playwright", "test", "--debug"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ­ Debug Current Playwright Test",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["exec", "playwright", "test", "${relativeFile}", "--debug"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        // ========================================
        // Build & Generation
        // ========================================
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ“¦ Debug Nuxt Build",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "build"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ“¦ Debug Nuxt Generate",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "generate"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
        },

        // ========================================
        // Type Checking & Linting
        // ========================================
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ” Debug TypeScript Check",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "typecheck"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ğŸ” Debug ESLint",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["run", "lint"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "ğŸ¯ Full Stack Debug (Server + Chrome)",
            "configurations": ["ğŸš€ Debug Nuxt Dev Server", "ğŸŒ Debug Nuxt in Chrome"],
            "stopAll": true,
            "presentation": {
                "order": 1
            }
        },
        {
            "name": "ğŸ¯ Full Stack Debug (Server + Edge)",
            "configurations": ["ğŸš€ Debug Nuxt Dev Server", "ğŸŒ Debug Nuxt in Edge"],
            "stopAll": true,
            "presentation": {
                "order": 2
            }
        }
    ]
}