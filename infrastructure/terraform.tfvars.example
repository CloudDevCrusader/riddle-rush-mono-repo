# Example Terraform variables file for Riddle Rush PWA
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "riddle-rush-pwa"
environment  = "development"
aws_region   = "eu-central-1"

# S3 Configuration
bucket_name = ""  # Leave empty for auto-generated name
enable_versioning = true
enable_lifecycle = true

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"

# Domain Configuration (optional)
domain_name = ""  # e.g., "pwa.example.com"
certificate_arn = ""  # ACM certificate ARN for custom domain

# IAM Configuration
create_additional_admin = false
additional_admin_username = "admin2"

# SSR Lambda Configuration (optional)
enable_ssr_lambda = false
ssr_domain_name = ""  # e.g., "ssr.example.com"
ssr_certificate_arn = ""  # ACM certificate ARN for SSR domain

# Additional Tags
tags = {
  Environment = "development"
  Project     = "Riddle Rush PWA"
  ManagedBy   = "Terraform"
}
