  "compilerOptions": {
    "types": ["node", "vitest/globals", "vite/client", "@pinia/nuxt", "@nuxtjs/i18n"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", ".nuxt/**/*"],
