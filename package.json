{
  "name": "riddle-rush-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "description": "Riddle Rush - Monorepo for game, documentation, and infrastructure",
  "scripts": {
    "dev": "turbo run dev --filter=@riddle-rush/game",
    "dev:docs": "turbo run dev --filter=@riddle-rush/docs",
    "dev:all": "turbo run dev",
    "build": "turbo run build --filter=@riddle-rush/game",
    "build:docs": "turbo run build --filter=@riddle-rush/docs",
    "build:all": "turbo run build",
    "generate": "turbo run generate --filter=@riddle-rush/game",
    "generate:docs": "turbo run generate --filter=@riddle-rush/docs",
    "test": "turbo run test --filter=@riddle-rush/game",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e --filter=@riddle-rush/game",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:format": "syncpack format",
    "workspace:check": "pnpm syncpack:check && pnpm typecheck && pnpm lint",
    "workspace:fix": "pnpm syncpack:fix && pnpm lint:fix && pnpm format",
    "prepare": "husky",
    "infra:setup": "cd infrastructure && ./scripts/setup-tfenv.sh",
    "infra:prod:init": "cd infrastructure/environments/production && terraform init",
    "infra:prod:plan": "cd infrastructure/environments/production && terraform plan",
    "infra:prod:apply": "cd infrastructure/environments/production && terraform apply",
    "infra:dev:init": "cd infrastructure/environments/development && terraform init",
    "infra:dev:plan": "cd infrastructure/environments/development && terraform plan",
    "infra:dev:apply": "cd infrastructure/environments/development && terraform apply",
    "terraform:outputs": "./scripts/get-terraform-outputs.sh",
    "terraform:sync": "./scripts/sync-terraform-outputs.sh",
    "terraform:plan": "./scripts/terraform-plan.sh",
    "terraform:apply": "./scripts/terraform-apply.sh",
    "deploy:infrastructure": "./scripts/deploy-infrastructure.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "deploy:dev": "./scripts/deploy-dev.sh",
    "deploy:aws": "./scripts/aws-deploy.sh",
    "android:sync": "cd apps/game && pnpm android:sync",
    "android:open": "cd apps/game && pnpm android:open",
    "android:run": "cd apps/game && pnpm android:run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@pnpm/filter-workspace-packages": "^1.0.0",
    "@types/node": "^22.10.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "syncpack": "^13.0.0",
    "turbo": "^2.7.3",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
