{
  "name": "guess-game-nuxt-pwa",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "start": "npm run dev",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:local": "./scripts/e2e-local.sh",
    "test:e2e:production": "BASE_URL=https://djdiox.gitlab.io/guess-game-nuxt-pwa playwright test",
    "test:e2e:staging": "BASE_URL=https://djdiox.gitlab.io/guess-game-nuxt-pwa/staging playwright test",
    "test:e2e:dev": "BASE_URL=https://djdiox.gitlab.io/guess-game-nuxt-pwa/dev playwright test",
    "typecheck": "nuxt typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "[ \"$CI\" = 'true' ] && echo 'Skipping husky in CI' || (cd .. && husky guess-game-nuxt-pwa/.husky || true)",
    "ci:build": "npm run typecheck && npm run generate",
    "ci:test": "npm run test:unit:coverage",
    "deploy:dev": "./scripts/deploy-dev.sh",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "deploy:aws": "./aws-deploy.sh production"
  },
  "dependencies": {
    "@nuxtjs/i18n": "^10.2.1",
    "@pinia/nuxt": "^0.11.3",
    "@vite-pwa/nuxt": "^1.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "idb": "^8.0.3",
    "nuxt": "^4.2.2",
    "nuxt-viewport": "^2.3.1",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@nuxt/eslint": "^1.0.0",
    "@nuxt/test-utils": "^3.21.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "nuxt-gtag": "^4.1.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  }
}
