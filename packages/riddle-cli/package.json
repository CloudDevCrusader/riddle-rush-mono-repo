{
  "name": "@riddle-rush/cli",
  "version": "1.0.0",
  "description": "Riddle Rush CLI - Agent workflow and project management",
  "keywords": [
    "oclif",
    "riddle",
    "cli"
  ],
  "homepage": "https://github.com/djdiox/riddle-rush-nuxt-pwa",
  "license": "MIT",
  "author": "Riddle Rush Team",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "riddle": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/mocha": "^10",
    "@types/node": "^22.19.7",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "oclif": {
    "bin": "riddle",
    "dirname": "riddle",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": ":"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "packageManager": "pnpm@10.26.2"
}
